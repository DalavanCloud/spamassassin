CC = @@CC@@
CFLAGS = @@CFLAGS@@
SSLCFLAGS = @@SSLCFLAGS@@

SRCDIR = @@SRCDIR@@
MAKEFILE = @@MAKEFILE@@

LIBS = @@LIBS@@
SSLLIBS = @@SSLLIBS@@

SPAMC_FILES = @@SPAMC_FILES@@
LIBSPAMC_FILES = @@LIBSPAMC_FILES@@


all: spamc.exe


$(SRCDIR)/spamc.exe:
	cd $(SRCDIR)
	make -f $(MAKEFILE) spamc.exe


spamc.exe: $(SPAMC_FILES) $(LIBSPAMC_FILES)
	$(CC) $(SSLCFLAGS) $(CFLAGS) $(SPAMC_FILES) $(LIBSPAMC_FILES) $(LIBS) $(SSLLIBS)

