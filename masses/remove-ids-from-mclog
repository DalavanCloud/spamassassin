use strict;

my $file = shift @ARGV;
$file or usage();

sub usage {
die "
usage: remove-ids-from-mclog idlist < log > log.new
";
}

my %ids = ();
open (IN, "<$file") or usage();
while (<IN>) { chop; $ids{$_}++; }
close IN;

my $rmed = 0;
my $left = 0;
while (<>) {
  if (/^[Y\.]\s+-?\d+\s+(\S+)\s+\S+/) {
    if ($ids{$1}) {
      $rmed++; next;
    }
  }
  print; $left++;
}

warn "read ".(scalar keys %ids)." IDs, $rmed lines removed, $left left intact.\n";

