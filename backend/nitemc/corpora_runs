#!/bin/bash

# Cron script for "release".  see "backend/nitemc/crontab.txt"

TZ=UTC; export TZ

DIR=$HOME/versions/trunk

if [ ! -d $DIR ]; then
  echo "Whaaaa?!?  No directory?" >&2
  exit 2
fi

cd $DIR
svn update > /dev/null
if [ $? -ne 0 ]; then
  echo "Problem doing svn update" >&2
  exit 1
fi

RREV=`$SVNVERS .`
REV=`echo $RREV | awk -F: '{print $1}' | tr -cd '[0-9]'`
DATE=`date "+%Y-%m-%d"`

echo -e "$DATE\t$REV"
