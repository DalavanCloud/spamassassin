#!/usr/bin/perl -w

use strict;

my $perl = $^X;
if (!$perl) {
  die "no perl path found in ARGV!";
}

my $command = shift @ARGV;

if ($command eq 'start') {
  do_start();
}
elsif ($command eq 'stop') {
  do_stop();
}
exit;

# ---------------------------------------------------------------------------

sub do_start {
  # ensure all pre-reqs (and rules) are built
  system ("$perl Makefile.PL < /dev/null");
  system ("make");
}

# ---------------------------------------------------------------------------

sub do_stop {
  chdir("masses") or die;
  system ("make freqs");
  system ("cat freqs");
}


