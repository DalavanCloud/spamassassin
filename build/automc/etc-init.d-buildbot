#!/bin/sh

# to create a new slave:
#
# PASSWORD=[whatever]
# buildbot slave /export/home/buildbot/slaves/slave-name buildbot.spamassassin.org:9988 slave-name $PASSWORD

. /etc/profile

HOME=/home/buildbot
PYTHONPATH=/local/buildbot-live/lib/python
export PYTHONPATH HOME

prog=buildbot
runall () {
    su buildbot -c "buildbot $1 /export/home/buildbot/bots/sa"
}

start() {
    echo "Starting $prog: " 
    runall start
    RETVAL=$?
    echo
    return $RETVAL
}

stop() {
    runall stop
    RETVAL=$?
    return $RETVAL
}

case "$1" in
	start)
	    start
	    ;;
	
	stop)
	    stop
	    ;;
	
	restart)
	    stop; sleep 2; start
	    ;;
	
	*)
	    echo $"Usage: $0 {start|stop|restart|condrestart}"
	    exit 1

esac

exit 0
