#!/bin/sh -x

. /export/home/jm/tools/setenvs

# clean everything first
make distclean < /dev/null
rm -rf t/log t/log.make_test t/log.make_disttest t/log.make_test_p561

# generate 't/log.make_test'
perl Makefile.PL < /dev/null
make
make test
mv t/log t/log.make_test

# generate 't/log.make_disttest'
make disttest < /dev/null
mv Mail-SpamAssassin*/t/log t/log.make_disttest

and 't/log.make_test_p561'
make distclean < /dev/null
/home/jm/tools/perl561/bin/perl Makefile.PL < /dev/null
make
make test
mv t/log t/log.make_test_p561

make distcheck
