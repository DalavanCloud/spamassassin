#!/bin/sh -e

. /usr/share/debconf/confmodule

db_get spamassassin/upgrade/2.42u || true
if [ "$RET" = "Yes" ] ; then
    rm /etc/spamassassin/[1-6][0-9]_*.cf || true
    rm /etc/spamassassin/triplets.txt || true
    rm /etc/spamassassin/languages || true
    db_set spamassassin/upgrade/2.42u "No" || true
fi
db_get spamassassin/upgrade/2.42m || true
if [ "$RET" = "Yes" ] ; then
    rm /etc/spamassassin/[1-6][0-9]_*.cf || true
    rm /etc/spamassassin/triplets.txt || true
    rm /etc/spamassassin/languages || true
    db_set spamassassin/upgrade/2.42m "No" || true
fi


db_stop

#DEBHELPER#
